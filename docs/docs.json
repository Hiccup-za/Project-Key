{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Project Key",
  "favicon": "/favicon.svg",
  "theme": "mint",
  "appearance": {
    "default": "dark",
    "strict": true
  },
  "colors": {
    "primary": "#E2B522",
    "dark": "#E2B522",
    "light": "#E2B522"
  },
  "logo": {
    "dark": "/favicon.svg",
    "light": "/favicon.svg"
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity"]
  },
  "navigation": {
    "groups": [
      {
        "group": "Documentation",
        "pages": [
          "/index",
          "/getting-started"
        ]
      },
      {
        "group": "Product Requirements Documents",
        "pages": [
          "prd/core-components",
          "prd/security-model",
          "prd/mvp"
        ]
      }
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/Hiccup-za/Project-Key",
      "x": "https://x.com/ProjectKeyAuth"
    }
